#!/bin/sh
exec >/dev/console 2>&1
export TERM=linux
export PS1='initramfs-test:\w\$ '
stty sane
echo "made it to the rootfs! Powering down."
while read dev fs fstype opts rest; do
    [ "$fstype" != "ext2" ] && continue
    echo "iscsi-OK $dev $fstype $opts" > /dev/sda
    break
done < /proc/mounts
#sh -i
poweroff -f
